{
    "name": "mzawadie-storefront",
    "version": "1.0.0",
    "private": true,
    "author": "Emmanuel Maro <emmanuelmaro733@gmail.com>",
    "scripts": {
        "dev": "next dev -p 9000",
        "build": "next build",
        "start": "next start -p 9000",
        "lint": "next lint --fix --no-cache",
        "format": "prettier --write \"**/*.+(ts|tsx|js|jsx|json|yml|yaml|css|scss)\"",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.+(ts|tsx|js|jsx)": [
            "eslint 'src/**/*.{ts,tsx,js,jsx}' --quiet --fix",
            "git add"
        ],
        "*.+(json|css|md)": [
            "prettier --write",
            "git add"
        ],
        "*.+(ts|tsx|js|jsx|json|yml|yaml|css|md|html)": "prettier --write",
        "*.js": "eslint --cache --fix",
        "*.+(ts|tsx|js|jsx|json|yml|yaml|css)": "prettier --write"
    },
    "dependencies": {
        "next": "11.1.2",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^2.0.4",
        "@types/react": "17.0.32",
        "eslint": "8.1.0",
        "eslint-config-next": "11.1.2",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.4",
        "prettier": "^2.4.1",
        "typescript": "4.4.4"
    }
}
